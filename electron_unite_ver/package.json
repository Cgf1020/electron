{
  "name": "electron-quick-start",
  "author": "GitHub",
  "license": "CC0-1.0",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "./electron_src/main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "dist": "electron-builder" 
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "homepage": "",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "build": {
    "productName": "addon",
    "asar": false,
    "appId": "com.TalkClass.CloudClass",
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./res/icon/icon_win.ico",
      "uninstallerIcon": "./res/icon/icon_win.ico",
      "installerHeaderIcon": "./res/icon/icon_win.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "addon",
      "unicode": true
    },
    "win": {
      "icon": "./res/icon/icon_win.ico", 
      "target": [
        {
          "target": "zip",
          "arch": [
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "node-addon-api": "^5.0.0",
    "node-gyp": "^9.3.1"
  },
  "devDependencies": {
    "electron": "^18.0.3",
    "electron-builder": "^23.6.0"
  }
}
