{
  "name": "electron-quick-start",
  "author": "GitHub",
  "license": "CC0-1.0",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "./electron_src/main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "homepage": "",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "build": {
    "productName": "class",
    "asar": false,
    "appId": "com.TalkClass.CloudClass",
    "files": [
      "./electron_src/**",
      "./res/static/**"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./res/static/icon_win.ico",
      "uninstallerIcon": "./res/static/icon_win.ico",
      "installerHeaderIcon": "./res/static/icon_win.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "addon",
      "unicode": true,
      "include": "./res/pack/installer.nsh"
    },
    "win": {
      "icon": "./res/static/icon_win.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "./res/common/win_tools/",
          "to": ".",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "node-addon-api": "^5.0.0",
    "node-gyp": "^9.3.1"
  },
  "devDependencies": {
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0"
  }
}
